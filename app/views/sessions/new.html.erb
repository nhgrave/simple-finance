<%= form_with url: session_path, scope: :user, method: :post do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  <%= form.submit "Sign In" %>
  <%= link_to "Register", new_registration_path %>
<% end %>
