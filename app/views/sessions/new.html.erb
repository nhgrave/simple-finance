<div class="row justify-content-center">
  <div class="col-sm-6 col-md-4 col-lg-3">
    <h2 class="text-center">Login</h2>
    <%= form_with url: session_path, scope: :user, method: :post do |form| %>
      <div class="card">
        <div class="card-body">
          <div class="mb-3">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, required: true, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, required: true, class: "form-control" %>
          </div>

          <%= form.submit "Sign In", class: "btn btn-primary w-100 mb-2" %>
          <p class="text-center mb-2">or</p>
          <%= link_to "Register", new_registration_path, class: "btn btn-link w-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
